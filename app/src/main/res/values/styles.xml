<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--App branding color for the app bar-->
        <item name="colorPrimary">#732c7b</item>
        <!--Darker variant for the status bar and contextuals app bars-->
        <item name="colorPrimaryDark">#421c52</item>
        <!--Theme UI controls like checkboxes and text fields-->
        <item name="colorAccent">#bdaec6</item>
        <!--Color for text-->
        <item name="android:textColor">#421c52</item>
        <!--Font type -->
        <item name="android:typeface">serif</item>
    </style>

    <!--Styles for checkboxes-->
    <style name="MyCheckBoxStyle">
        <item name="android:textSize">14sp</item>
        <item name="buttonTint">#732c7b</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#421c52</item>
    </style>

    <!--Styles for buttons-->
    <style name="MyButtonStyle">
        <item name="android:colorButtonNormal">#732c7b</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif"</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Styles for different texts (headers, no of quantity, excample text in EditText)-->
    <style name="TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
